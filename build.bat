@echo off
cls

SET LIBS=
SET LIB_DIR=

SET INCLUDE_DIRS=

SET SRC_FILES=
SET MAIN_FILE=..\src\main.cpp
SET EXECUTABLE_NAME=wiws.exe

SET CFLAGS=/EHsc /Zi /nologo
SET LINKER_FLAGS=/OUT:%EXECUTABLE_NAME%

PUSHD .
MKDIR build
CD build

cl %MAIN_FILE% %SRC_FILES% %INCLUDE_DIRS% %CFLAGS% /link %LIBS% %LIB_DIRS% %LINKER_FLAGS%


IF ERRORLEVEL 1 GOTO EXIT

CALL %EXECUTABLE_NAME%

:EXIT
POPD
